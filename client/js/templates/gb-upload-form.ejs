<div id="gb-form-holder" class="col-md-6 col-md-offset-3">
    <form class="s_m_form" id="gbUploadForm" method="POST" action="#" autocomplete="off">
        <div class="toShow" id="gb-form-errors">
            <div id="gb-form-main-error" class="alert alert-danger">

            </div>
        </div>
        <div class="form-group form-filter hidden">
            <label for="input-filter-gbUpload">Niet invullen</label>
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="fa fa-ban"></i></span>
                <input autofocus type="text" class="form-control" id="input-filter-gbUpload"
                       name="input-filter-gbUpload"
                       placeholder="Are you a robot?">
            </div>
        </div>
        <div class="form-group has-feedback form-group-sm">
            <label for="naam">
                Naam:
            </label>
            <input type="text" class="form-control validation-candidate"
                   data-validation-type="not-empty"
                   id="naam" name="naam"
                   placeholder="Vul hier je naam in"
                   required>
            <div class="form-control-feedback">
                <i id="naam-feedback-icon" class="fa"></i>
            </div>
            <div id="naam-error-message" class="error-message text-danger"></div>
        </div>
        <div class="form-group has-feedback form-group-sm">
            <label for="boodschap">
                Boodschap
            </label>
            <input type="text" class="form-control validation-candidate"
                   data-validation-type="not-empty"
                   id="boodschap" name="boodschap"
                   placeholder="Omschrijf kort de foto"
                   required>
            <div class="form-control-feedback">
                <i id="boodschap-feedback-icon" class="fa"></i>
            </div>
            <div id="boodschap-error-message" class="error-message text-danger"></div>
        </div>
    </form>
</div>